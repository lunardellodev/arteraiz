*{
    margin: 0;
    padding: 0;
    list-style: none;
    text-decoration: none;
}

@font-face{
    font-family: Livvic;
    src: url("livvic.ttf");
}

@font-face{
    font-family: Mukta;
    src: url("mukta.ttf");
}

.container {width:910px;}

@media (max-width: 480px) {

.container {width:100%;}

}

body{
    width: 100%;
    height: 100%;
    overflow: hidden;
    background-color: #E0F0CB;
}

nav {
    background-color: #5c6c3c;
    height: 85px;
} 


.home {
    background-color: #5c6c3c;
    border: none;
    cursor: pointer;
    margin-left: 10px;
}

.a {
    color: white;
}

.login {
    float: right;
    margin: 12px;
    width: 20rem;
    font-size: 25px;
    position: absolute;
    top: 1.3%;
    left: 80%;
}

.dev {
    float: right;
    margin: 12px;
    width: 20rem;
    font-size: 25px;
    position: absolute;
    top: 1.3%;
    left: 65%;
}


.botao1 {
    background-color: #6B3232;
    width: 90px;
    height: 37px;
    font-size: 15px;
    border: none;
    border-radius: 10px;
    font-family: Livvic;
    
}

.botao2 {
    background-color: #6B3232;
    width: 130px;
    height: 37px;
    font-size: 15px;
    border: none;
    border-radius: 10px;
    font-family: Livvic;
    
}


.hamburger{
    width: 2.5rem;
    height: 2rem;
    position: absolute;
    z-index: 5;
    right: 3rem;
    top: 3%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    cursor: pointer;
}

.show-menu .hamburger{
    right: 17rem;
}

.line{
    width: 100%;
    height: .1rem;
    padding: 1px;
    border-radius: 10px;
    background-color: #411111;
    box-shadow: 0.1rem 0.1rem 3px rgba(0, 0, 0, 0.788);
    transition: transform .7s;
}

.show-menu #line1{
    transform: rotate(45deg) translate(.4rem, .9rem);
    background-color: #6B3232;
    box-shadow: none;
}

.show-menu #line2{
    opacity: 0;
    visibility: hidden;
}

.show-menu #line3{
    transform: rotate(-45deg) translate(.3rem, -.9rem);
    background-color: #6B3232;
    box-shadow: none;
}

.sidebar{
    width: 24rem;
    height: 110vh;
    background: linear-gradient(329.54deg, #445a15 0%, #445a15 100%);
    box-shadow: 10px 5px 15px 10px rgba(0, 0, 0, 0.582);
    position: absolute;
    top: 0;
    right: -25rem;
    transition: all .8s;
    z-index: 2;
}

.show-menu .sidebar{
    right: 0;
    position: absolute;
}

.menu{
    position: absolute;
    top: 54.5%;
    left: 50%;
    transform: translate(-50%, -50%);
	font-size: 1px;
}

.menu-item{

    margin-bottom: .5rem;
}

.menu-link{
 
    font-size: 20px;
    color: rgb(245, 245, 245);
    transition: color .7s;
    font-family: Mukta;
}

.menu-link:hover{
    color: black;
    transition: color .7s;
}


@media screen and (max-width: 768px) {
    .login {
        left: 55%;
    }
}

@media screen and (max-width: 768px) {
    .dev {
        left: 20%;
    }
}

@media screen and (max-width: 768px) {
    .sidebar {
        width: 24rem;
        height: 110vh;

        
    }
}

@media screen and (max-width: 768px) {
    .logo {
    width: 90px;
    margin-top: 20px;
    }
}